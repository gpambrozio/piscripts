[Unit]
Description=Home Assistant
After=network-online.target mosquitto.service time-sync.target
Requires=network-online.target mosquitto.service time-sync.target

[Service]
Type=simple
User=%i
WorkingDirectory=/home/%i/.homeassistant
ExecStart=/srv/homeassistant/venv_3.10.9/bin/hass -c "/home/%i/.homeassistant"
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
